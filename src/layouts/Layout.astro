    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>labnotes.</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  // This helps prevent navigation flashes
  document.addEventListener("astro:page-load", () => {
    // Ensure client-side navigation doesn't cause full re-renders
    const wrapper = document.querySelector(".transition-opacity");
    if (wrapper) {
      wrapper.classList.remove("opacity-0");
    }
  });

  // Intercept any client-side history navigation to handle it gracefully
  window.addEventListener("popstate", (event) => {
    // Don't reload the page on history navigation
    event.preventDefault();
  });
</script>
